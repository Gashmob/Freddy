{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "resolveJsonModule": true,
    "module": "ES2020",
    "sourceMap": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "noImplicitOverride": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": [],
    "incremental": true
  },
  "include": [
    "src",
    "tests"
  ]
}